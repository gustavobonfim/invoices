    <h1 class="page-header">
      Invoice Listing
      <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-default btn-sm pull-right" %>
    </h1>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel panel-heading">
          <div class="container">
            <div class="col-md-2">
              <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-default btn-sm" %>
            </div>

            <%= search_form_for @search, url: search_invoices_path, method: :post,
                                html:  {class: "form-inline col-md-8 col-me-offset-4"} do |f| %>
              <div class="input-daterange">
                <div class="col-md-2 col-md-offset-4">
                  <%= f.text_field :date_gteq, class: "form-control input-sm", placeholder: "Date >= to" %>
                </div>

                <div class="col-md-2">
                  <%= f.text_field :date_lteq, class: "form-control input-sm", placeholder: "Date <= to" %>
                </div>
              </div>
              <div class="col-md-2 col-md-offset-1 form-actions">
                <%= f.submit "Search", class: "btn btn-success btn-sm" %>
              </div>

            <% end %>
          </div>
        </div>


        <div class="panel panel-body">
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th>Company</th>
                <th>Contragent</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Date</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @invoices.each do |invoice| %>
              <tbody>
                <tr>
                  <td><%= invoice.company %></td>
                  <td><%= invoice.contragent %></td>
                  <td><%= invoice.amount %></td>
                  <td><%= invoice.currency %></td>
                  <td><%= invoice.date %></td>
                  <td><%= link_to 'Show', invoice_path(invoice), class: "btn btn-primary btn-sm"%></td>
                  <td><%= link_to 'Edit', edit_invoice_path(invoice), class: "btn btn-warning btn-sm"%></td>
                  <td><%= link_to 'Delete', invoice_path(invoice), method: :delete,
                                          class: "btn btn-danger btn-sm"%></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%= render 'data' %>
