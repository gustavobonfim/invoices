<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <h5>Minha Conta | <small>Dados</small></h5>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <%= simple_form_for(@detail, html: {class: 'form-horizontal'}) do |f| %>
            <div class="row">
              <div class="col-sm-8">
                <%= f.input :name, label: 'Nome', placeholder: "Nome"%>
              </div>
              <div class="col-sm-4">
                <%= f.input :birth_date, as: :string, input_html: { :class => "datepicker"}, label: 'Data Nascimento', placeholder: "Data de Nascimento"%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-12">
            <div class="btn-group pull-right">
              <%= button_tag type: 'submit', class: 'btn btn-mc-success mc-margin-r pull-right',
                            :'data-toggle' => 'tooltip', :'data-placement' => 'top', :title => 'Salvar' do %>
                <i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i>
              <% end %>

              <%= link_to '<i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i>'.html_safe, :back, class: 'btn btn-default mc-margin-r',
                            :'data-toggle' => 'tooltip', :'data-placement' => 'top', :title => 'Voltar' %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
